# ============================================================
# ECHO — Agentic Career AI
# Environment Configuration
# ============================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to git. Only commit .env.example

# ── APPLICATION ──────────────────────────────────────────────
APP_NAME=Echo
APP_ENV=development                    # development | production
SECRET_KEY=change-this-to-random-64-char-string-before-use
DEBUG=true

# ── API SERVER ───────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true                        # Hot-reload in dev mode
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ── WEB UI ───────────────────────────────────────────────────
WEB_PORT=5173

# ── OLLAMA (Local LLM — Free, No API Key Needed) ─────────────
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2                  # llama3.2 | mistral | phi3 | gemma2
OLLAMA_EMBED_MODEL=nomic-embed-text    # Free embedding model via Ollama
OLLAMA_TEMPERATURE=0.3
OLLAMA_MAX_TOKENS=2048
OLLAMA_TIMEOUT=60

# ── DATABASE ─────────────────────────────────────────────────
SQLITE_PATH=data/echo_career.db

# ── VECTOR STORE ─────────────────────────────────────────────
VECTOR_STORE_PATH=data/vector_store
VECTOR_STORE_TYPE=faiss                # faiss | chroma
EMBEDDING_DIM=768                      # nomic-embed-text dim

# ── JOB MATCHING ─────────────────────────────────────────────
MATCH_THRESHOLD=0.55                   # Minimum cosine similarity (0.0-1.0)
MATCH_TOP_N=20                         # Top N jobs to return
LLM_RERANK_ENABLED=true               # Use LLM for borderline matches
LLM_RERANK_MIN=0.50
LLM_RERANK_MAX=0.65

# ── SCRAPER ──────────────────────────────────────────────────
SCRAPE_DELAY_SECONDS=3                 # Polite delay between requests
SCRAPE_MAX_RETRIES=2
SCRAPE_RANDOM_DELAY=true              # Add random jitter to delays
AGENT_LOOP_HOURS=6                     # How often agent runs full cycle

# ── CANDIDATE (Auto-populated from resume analysis) ──────────
# These are set by Echo after resume upload — you can override here
CANDIDATE_NAME=
CANDIDATE_EMAIL=
CANDIDATE_GRADUATION_YEAR=2025
CANDIDATE_EXPERIENCE_LEVEL=fresher

# ── REPORTS ──────────────────────────────────────────────────
REPORTS_DIR=data/reports
REPORT_TIME=08:00                      # Daily report generation time (IST)

# ── MCP SERVER ───────────────────────────────────────────────
MCP_HOST=0.0.0.0
MCP_PORT=8001
MCP_ENABLED=true
